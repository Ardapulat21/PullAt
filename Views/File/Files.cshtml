@model List<FileInfo>

@{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
}
<div>
    <div>
        <form name="form" method="post" enctype="multipart/form-data">
            <div class="expandable-menu">
                <div id="expandable-button">
                    <i id="icon" class="bi bi-caret-down"></i>
                </div>
                <div class="expandable-items">
                    <div class="content" id="UploadButton" onclick="document.getElementById('fileInput').click()">
                        <label>Upload</label>
                        <input type="file" id="fileInput" hidden/>
                    </div>
                    <div class="content" id="SaveButton">Save</div>
                    <div class="content" id="DeleteButton">Delete</div>
                </div>
            </div>
        </form>
        <div class="gallery" style="width: 600px;">
            <div class="select-button-div" >
                <div class="select-button">
                    Select
                </div>
            </div>
            <div class="file-grid">
                @foreach (var file in Model)
                {
                    <div class="file-item">
                        <img name="@file.Filename" src="@file.FilePath" class="gallery-item"/>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="overlay-container">
        <div class="header-overlay">
            <div class="title-container">
                <p class="overlay-title"></p>
            </div>
            <div class="header-icons-overlay">
                <svg id="downloadButton"
                    width="20"
                    height="20"
                    viewBox="0 0 20 20"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    >
                    <path
                        d="M11 5C11 4.44772 11.4477 4 12 4C12.5523 4 13 4.44772 13 5V12.1578L16.2428 8.91501L17.657 10.3292L12.0001 15.9861L6.34326 10.3292L7.75748 8.91501L11 12.1575V5Z"
                        fill="currentColor"
                    />
                    <path
                        d="M4 14H6V18H18V14H20V18C20 19.1046 19.1046 20 18 20H6C4.89543 20 4 19.1046 4 18V14Z"
                        fill="currentColor"
                    />
                </svg>
                <svg id="exitButton"
                    width="20"
                    height="20"
                    viewBox="0 0 20 20"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    >
                    <path
                        d="M6.2253 4.81108C5.83477 4.42056 5.20161 4.42056 4.81108 4.81108C4.42056 5.20161 4.42056 5.83477 4.81108 6.2253L10.5858 12L4.81114 17.7747C4.42062 18.1652 4.42062 18.7984 4.81114 19.1889C5.20167 19.5794 5.83483 19.5794 6.22535 19.1889L12 13.4142L17.7747 19.1889C18.1652 19.5794 18.7984 19.5794 19.1889 19.1889C19.5794 18.7984 19.5794 18.1652 19.1889 17.7747L13.4142 12L19.189 6.2253C19.5795 5.83477 19.5795 5.20161 19.189 4.81108C18.7985 4.42056 18.1653 4.42056 17.7748 4.81108L12 10.5858L6.2253 4.81108Z"
                        fill="currentColor"
                    />
                </svg>
            </div>
        </div>
        <div id="imageContainer">
            <img class="image-overlay" src=""/>
        </div>
    </div>
</div>

<script src="~/js/files.js" type="module" asp-append-version="true"></script>