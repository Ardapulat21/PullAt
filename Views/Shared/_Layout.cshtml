<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PullAt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/files.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto+Flex:opsz,wght@8..144,100..1000&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header">
        <div onclick="navigateToHome()">
            <label>PullAt</label>
        </div>
    </div>
    <div class="body-layout">
        <div id="home-menu">
            <div id="home-menu-items">
            @if(!User.Identity.IsAuthenticated) {
                <div class="home-menu-item" id="login-button">
                    <i id="home-menu-icon" class="bi bi-arrow-bar-right"></i>
                    <p class="home-menu-content">Login</p>
                </div>
                <div class="home-menu-item"  id="register-button">
                    <i id="home-menu-icon" class="bi bi-person-plus"></i>
                    <p class="home-menu-content">Register</p>
                </div>
            }
            else {
                <div class="home-menu-page-items">
                    <div class="home-menu-item" id="files-button">
                        <i id="home-menu-icon" class="bi bi-folder"></i>
                        <p class="home-menu-content">Files</p>
                    </div>
                </div>
                <div class="home-menu-account-items">
                    <div class="home-menu-item" id="account-button">
                        <i id="home-menu-icon" class="bi bi-person-circle"></i>
                        <p class="home-menu-content">Account</p>
                    </div>
                    <div class="home-menu-item red" id="logout-button">
                        <i id="home-menu-icon" class="bi bi-arrow-bar-left"></i>
                        <p class="home-menu-content">Logout</p>
                    </div>
                </div>
                <script src="/js/views/home.js" type="module" asp-append-version="true" async></script>
            }
            </div>
            
            <div id="home-menu-button-layout">
                <div id="home-menu-button">
                    <i id="home-menu-icon-menu" class="bi bi-caret-left"></i>
                </div>
            </div>
        </div>
        <div class="content-layout">
            @RenderBody()
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
    <script src="/js/dom.js" type="module" asp-append-version="true" async></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

