<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PullAt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PullAt.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="navbar">
        <div class="left">
            <div class="cell" onclick="navigateToHome()">
                <img src="/Uploads/Image.png" style="width:80px" />
            </div>
        </div>
        <div class="right">
            <div class="cell" onclick="document.getElementById('Register').click()">
                <a id="Register" href="@Url.Action("Register","User")" style="color:white">Register</a>
            </div>
            <div class="cell" onclick="document.getElementById('Login').click()">
                <a id="Login" href="@Url.Action("Login","User")" style="color:white">Login</a>
            </div>
        </div>
    </div>
    <div >
        @RenderBody()
    </div>
    <div class="bottom-div">
        <p style="color:white;">&copy; 2024 - PullAt - <a style="color:white;" asp-area=" " asp-controller="Home" asp-action="Privacy">Privacy</a></p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

