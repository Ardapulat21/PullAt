<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PullAt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/files.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PullAt.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="header">
        <div onclick="navigateToHome()">
            <img src="/Uploads/Image.png" style="width:80px" />
        </div>
       @if (!User.Identity.IsAuthenticated)
        {
            <div class="authButtons">
                <div class="registerButton" onclick="document.getElementById('Register').click()">
                    <a id="Register" href="@Url.Action("Register","User")" style="color:white">Register</a>
                </div>
                <div class="loginButton" onclick="document.getElementById('Login').click()">
                    <a id="Login" href="@Url.Action("Login","User")" style="color:white">Login</a>
                </div>
            </div>
        }
        else
        {
            <div class="authButtons">
                <div class="loginButton" onclick="document.getElementById('Logout').click()">
                    <a id="Logout" href="@Url.Action("Logout","User")" style="color:white">Logout</a>
                </div>
            </div>
        }
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/files.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

